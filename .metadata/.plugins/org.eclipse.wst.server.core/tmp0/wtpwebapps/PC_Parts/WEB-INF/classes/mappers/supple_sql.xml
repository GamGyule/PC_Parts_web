<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper

  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"

  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Supple">
	<!-- <select id="getAll" resultType="com.gamgyul.gams.dto.CustomerDTO">
		select * from customer
	</select> -->
	
	 <select id="AllSuppleCnt" resultType="java.lang.Integer">
        select count(*) from product 
    </select>
    
    <select id="NameSuppleCnt" resultType="java.lang.Integer">
        select count(*) from product where name like '%'#{name}'%'
    </select>
    
        <select id="CoSuppleCnt" resultType="java.lang.Integer">
        select count(*) from product where name where co = #{co}
    </select>

	<select id="SuppleSelectAll" resultType="com.pc.parts.dto.SuppleDTO">
        <![CDATA[ select * from product limit #{page}, 15]]>
    </select>
    
    <select id="SuppleSelectName" resultType="com.pc.parts.dto.SuppleDTO">
        <![CDATA[ select * from product where name like '%'#{name}'%' limit (#{page}-1)*15, 15]]>
    </select>
    	
    <select id="SuppleSelectCo" resultType="com.pc.parts.dto.SuppleDTO">
        select * from product where co = #{co} limit (#{page}-1)*15, 15
    </select>

        <select id="SuppleSelectIdx" resultType="com.pc.parts.dto.SuppleDTO">
        select * from product where #{idx} = idx;
    </select>

    

</mapper>